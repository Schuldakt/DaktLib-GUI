<?xml version="1.0" encoding="utf-8"?>
<package xmlns="http://schemas.microsoft.com/packaging/2013/05/nuspec.xsd">
  <metadata>
    <id>DaktLib.GUI</id>
    <version>$VERSION$</version>
    <title>DaktLib GUI</title>
    <authors>Schuldakt</authors>
    <license type="expression">MIT</license>
    <projectUrl>https://github.com/Schuldakt/DaktLib</projectUrl>
    <repository type="git" url="https://github.com/Schuldakt/DaktLib.git" />
    <description>
      Zero-dependency, cross-platform GUI library with immediate and retained modes.
      Supports DirectX 11/12, Vulkan, OpenGL 4.5+, and Metal backends.
      Built with C++23 for Windows, Linux, and macOS.
    </description>
    <summary>Cross-platform GUI library with multi-backend rendering</summary>
    <releaseNotes>See https://github.com/Schuldakt/DaktLib/releases</releaseNotes>
    <copyright>Copyright 2024-2025 Schuldakt</copyright>
    <tags>gui imgui vulkan directx opengl metal cpp23 cross-platform native</tags>
    <readme>docs/README.md</readme>
  </metadata>
  
  <files>
    <!-- Headers -->
    <file src="include/**/*.hpp" target="build/native/include" />
    <file src="include/**/*.h" target="build/native/include" />
    
    <!-- Windows x64 -->
    <file src="runtimes/win-x64/native/*.lib" target="runtimes/win-x64/native" />
    <file src="runtimes/win-x64/native/*.dll" target="runtimes/win-x64/native" />
    
    <!-- Windows x86 -->
    <file src="runtimes/win-x86/native/*.lib" target="runtimes/win-x86/native" />
    <file src="runtimes/win-x86/native/*.dll" target="runtimes/win-x86/native" />
    
    <!-- Linux x64 -->
    <file src="runtimes/linux-x64/native/*.a" target="runtimes/linux-x64/native" />
    <file src="runtimes/linux-x64/native/*.so*" target="runtimes/linux-x64/native" />
    
    <!-- macOS x64 -->
    <file src="runtimes/osx-x64/native/*.a" target="runtimes/osx-x64/native" />
    <file src="runtimes/osx-x64/native/*.dylib" target="runtimes/osx-x64/native" />
    
    <!-- macOS ARM64 -->
    <file src="runtimes/osx-arm64/native/*.a" target="runtimes/osx-arm64/native" />
    <file src="runtimes/osx-arm64/native/*.dylib" target="runtimes/osx-arm64/native" />
    
    <!-- Build targets for MSBuild integration -->
    <file src="build/DaktLib.GUI.targets" target="build" />
  </files>
</package>